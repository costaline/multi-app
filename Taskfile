#!/bin/bash
PATH=./node_modules/.bin:$PATH
################################################################################
##################################### PROD #####################################
################################################################################
function task:prod_with_vagrant__start {
	vagrant up
}
################################################################################
###################################### DEV #####################################
################################################################################
function task:dev_with_docker__start {
	#	run in parallel
	yarn dev --filter=lit-wc &
	docker compose -f docker-compose.yml -f docker-compose.dev.yml up --build
}
################################################################################
################################### TASKFILE ###################################
################################################################################
function task:default {
	task:help
}

function task:help {
	echo "$0 <task> <args>"
	echo "Tasks:"

	# We pick out the `task:*` functions
	compgen -A function | sed -En 's/task:(.*)/\1/p' | cat -n
}

TIMEFORMAT="Task completed in %3lR"
# shellcheck disable=SC2145
time "task:${@:-default}" || time "task:help"
################################################################################
##################################### REFS #####################################
################################################################################
# https://github.com/adriancooney/Taskfile
