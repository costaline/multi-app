{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {
      "outputs": []
    },
		"lint:style": {
			"outputs": []
		},
    "dev": {
      "cache": false
    },
		"docs#dev": {
			"env": ["APP_DOCS_PORT"]
		},
		"home#dev": {
			"env": ["APP_HOME_PORT"],
			"dependsOn": ["lit-wc#build"]
		},
		"about#dev": {
			"env": ["APP_ABOUT_PORT"],
			"dependsOn": ["lit-wc#build"]
		},
		"storybook": {
			"cache": false,
			"env": ["NODE_OPTIONS=--openssl-legacy-provider"]
		}
	}
}
